<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do-List</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="https://img.icons8.com/ios/50/book--v1.png">
</head>

<body>
    <% if(message !="" ) { %>
        <%- include('./components/message', {
                nomeClass: `message message-${typeMessage}`,
                messageSend: message
        }) %>
    <% } %>


            <header>
                <% if(taskId==null){ %>

                    <%- include('./components/forms', {
                            nomeForm: "To Do List" ,
                            action: "/create" ,
                            value: "" ,
                            idBtn: "addButton" ,
                            nomeBtn: "Adicionar" }) %>

                <% } else { %>

                        <%- include('./components/forms', {
                            nomeForm: "Editar Tarefa",
                            action: `/updateOne/${taskId._id}`,
                            value: taskId.task ,
                            idBtn: "editButton" ,
                            nomeBtn: "Atualizar"

                        }) %>

                <% } %>

            </header>
            <section id="tasks">
                <ul>
                    <% tasksList.forEach((task)=> { %>

                        <li class="check-<%= task.check %>">
                            <div>
                                <a href="/taskCheck/<%= task._id %>" class="check-<%= task.check %>">
                                    <%= task.task %>
                                </a>
                                <span> Criado em <%= task.date.toLocaleDateString('pt-br') %></span>
                            </div>
                        
                            <div>
                                <a id="buttonEdit" href="/getById/<%= task._id %>/update"><i
                                        class="bi bi-pencil-square"></i></a>
                                <a id="buttonDelete" href="/getById/<%= task._id %>/delete"><i
                                        class="bi bi-trash3-fill"></i></a>
                            </div>
                        </li>

                    <% }) %>
                </ul>
            </section>

            <% if(taskDelete !=null) { %>
                <%- include('./components/modalDel.ejs') %>
                    <% } %>



                        <script src="script.js"></script>
</body>

</html>